<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_of_ui"
    tools:context=".LoginPage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="335dp"
        android:layout_margin="40dp"
        android:background="#FFEB3B"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#433B3B"
                android:src="@drawable/user2"></ImageView>

            <EditText
                android:id="@+id/editLogin_Email"
                android:layout_width="186dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="#020202"
                android:defaultFocusHighlightEnabled="true"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#0B0A0A"
                android:textSize="14dp"
                android:textStyle="italic"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#433B3B"
                android:src="@drawable/lock2">

            </ImageView>

            <EditText
                android:id="@+id/editLogin_Password"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#090808"
                android:ems="10"
                android:foregroundTint="#000000"
                android:hint="Password"
                android:inputType="textPersonName|textPassword"
                android:textColor="#000000"
                android:textColorHint="#0B0808"
                android:textSize="14dp"
                android:textStyle="italic"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#8BC34A"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Login"
                android:layout_width="251dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:backgroundTint="#FF5722"
                android:text="Login"
                android:textColor="#FDFCFC"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <TextView
            android:id="@+id/textForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:linksClickable="true"
            android:paddingTop="10dp"
            android:text="I forgot my password"
            android:textColor="#0D0E10"
            android:textColorLink="#1331D6"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:linksClickable="true"
            android:text="Are you a Registered User?"
            android:textColor="@color/purple_500" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="108dp"
        android:layout_height="92dp"
        android:background="#EA3030"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:srcCompat="@drawable/login2"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>